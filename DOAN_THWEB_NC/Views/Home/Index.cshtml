@model IEnumerable<DOAN_THWEB_NC.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link href="@Url.Content("~/Public/css/style.css")" rel="stylesheet" type="text/css" />
    <style>
    </style>
</head>

<div class="container mt-3" >
    <div class="row">
        <div class="col-3">
            <p class="text-center text-lg-start text-white"style="background-color: #C89063">Danh mục</p>
            @{Html.RenderAction("Index", "Menu");}
        </div>
        <div class="col-9 ">
            
            <div id="carouselExampleIndicators" class="carousel slide border border-dark " data-bs-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
                    <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Public/img/carousel/s22.png" class="d-block w-100"alt="First slide"  />
                        
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Public/img/carousel/Zenbook_Oled.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Public/img/carousel/Huawei_watch_fit_2.png"  alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
`                </a>
            </div>
        </div>
    </div>

    <div class="main">
        <div class="content " style="background: linear-gradient(90deg,#ffecd2 0%,#fcb69f 100%); border-radius:15px;">
            <div class="content_top mt-3">
                <div class="heading">
                    <h1 class="text-center py-3 ">ĐIỆN THOẠI NỔI BẬT NHẤT</h1>
                </div>

            </div>
            <div class="container ">

                <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3  ">
                    @foreach (var item in Model.Where(n => n.IDCategory == 1).Take(8))
                    {
                        <div class="col">
                            <div class="bg-white rounded-3  ">
                                <div class="hovers">
                                    <a class="d-flex justify-content-center py-4 " href="@Url.Action("Index", "ProductDetail", new {Id=item.IDProduct})">
                                        <img src="@Url.Content(item.Images)" alt="" class="hovers" />
                                    </a>
                                    <p class="ms-3 fs-5">@Html.DisplayFor(model => item.NameProduct) </p>
                                </div>
                                
                                <div class="price-details">
                                    <div class="price-number">
                                        <p class="ms-3 text-danger fw-bold">@Html.DisplayFor(model => item.UnitPrice) VND</p>
                                    </div>
                                    <div class="add-cart d-flex justify-content-center  w-100">
                                        <h4><a href="/ShoppingCart/AddCart/@item.IDProduct" class="btn btn-warning shadow-none"><i class="fa fa-shopping-cart mr-1"></i>Thêm vào giỏ hàng</a></h4>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                </div>

            </div>
            <div class=" d-flex justify-content-center py-4 ">
                    <p class="text-center py-3 bg-white w-25 see m-0">
                        <a class="text-decoration-none text-black" href="/AllProduct/Index">Xem tất cả sản phẩm</a>
                    </p>


            </div>

        </div>
        <div class="content">
            <div class="content_top d-flex mt-3"style="background-color: #C89063">
                <div class="heading">
                    <h3>Điện thoại iPhone</h3>
                </div>
            </div>
            <div class="row" >
                @foreach (var item in Model.Where(n => n.IDCategory == 2).Take(8))
                {
                    <div class="col-sm-6 col-md-4 col-lg-3" style="margin-top:20px">
                        <div class="card">
                            <a href="@Url.Action("Index", "ProductDetail", new {Id=item.IDProduct})"><img src="@Url.Content(item.Images)" alt="" style="min-height:235px" /></a>
                            <p style="text-align:center">@Html.DisplayFor(model => item.NameProduct) </p>
                            <div class="price-details">
                                <div class="price-number">
                                    <p>@Html.DisplayFor(model => item.UnitPrice) VND</p>
                                </div>
                                <div class="add-cart">
                                    <h4><a href="/ShoppingCart/AddCart/@item.IDProduct" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add to Cart</a></h4>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="content">
            <div class="content_top mt-3" style="background-color: #C89063">
                <div class="heading">
                    <h3>Điện thoại Xiaomi</h3>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.Where(n => n.IDCategory == 3).Take(8))
                {
                    <div class="col-sm-6 col-md-4 col-lg-3" style="margin-top:20px">
                        <div class="card">
                            <a href="@Url.Action("Index", "ProductDetail", new {Id=item.IDProduct})"><img src="@Url.Content(item.Images)" alt="" style="min-height:235px" /></a>
                            <p style="text-align:center">@Html.DisplayFor(model => item.NameProduct) </p>
                            <div class="price-details">
                                <div class="price-number">
                                    <p>@Html.DisplayFor(model => item.UnitPrice) VND</p>
                                </div>
                                <div class="add-cart">
                                    <h4><a href="/ShoppingCart/AddCart/@item.IDProduct" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add to Cart</a></h4>
                                </div>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="content">
            <div class="content_top mt-3" style="background-color: #C89063">
                <div class="heading">
                    <h3>Điện thoại Vivo</h3>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.Where(n => n.IDCategory == 4).Take(8))
                {
                    <div class="col-sm-6 col-md-4 col-lg-3" style="margin-top:20px">
                        <div class="card">
                            <a href="@Url.Action("Index", "ProductDetail", new {Id=item.IDProduct})"><img src="@Url.Content(item.Images)" alt="" style="min-height:235px" /></a>
                            <p style="text-align:center">@Html.DisplayFor(model => item.NameProduct) </p>
                            <div class="price-details">
                                <div class="price-number">
                                    <p>@Html.DisplayFor(model => item.UnitPrice) VND</p>
                                </div>

                            </div>
                            <div class="add-cart">
                                <h4><a href="/ShoppingCart/AddCart/@item.IDProduct" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add to Cart</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>