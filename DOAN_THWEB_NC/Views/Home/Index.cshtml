@model IEnumerable<DOAN_THWEB_NC.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Contents/style.css" rel="stylesheet" />
    <link href="~/Contents/slider.css" rel="stylesheet" />
    <link href="~/Contents/global.css" rel="stylesheet" />
    <link href="~/Contents/easy-responsive-tabs.css" rel="stylesheet" />
    <style>
        .card {
            width: 250px;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            margin: 5px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        img {
            border-radius: 5px 5px 0 0;
        }
    </style>
</head>
<div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            <ul>
                <h3>Categories</h3>
                @{Html.RenderAction("Index", "Menu");}
            </ul>
        </div>
    </div>
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    <div class="slide">
                        <div class="slider-img">
                            <a href="preview.html"><img src="~/Images/slide-1-image.png" alt="learn more" /></a>
                        </div>
                        <div class="slider-text">
                            <h1>Clearance<br><span>SALE</span></h1>
                            <h2>UPTo 20% OFF</h2>
                            <div class="features_list">
                                <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>

<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>New Apple</h3>
            </div>
            <div class="see">
                <p><a href="/AllProduct/Index">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="row">
            @foreach (var item in Model.Where(n => n.IDCategory == 1).Take(8))
            {
                <div class="col-sm-6 col-md-4 col-lg-3" style="margin-top:20px">
                    <div class="card">
                        <a href="@Url.Action("Index", "ProductDetail", new {Id=item.IDProduct})"><img src="@Url.Content(item.Images)" alt="" style="min-height:235px" /></a>
                        <p style="text-align:center">@Html.DisplayFor(model => item.NameProduct) </p>
                        <div class="price-details">
                            <div class="price-number">
                                <p>@Html.DisplayFor(model => item.UnitPrice) VND</p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="/ShoppingCart/AddCart/@item.IDProduct" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Add to Cart</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
