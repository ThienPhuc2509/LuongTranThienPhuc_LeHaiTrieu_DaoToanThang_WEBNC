@model DOAN_THWEB_NC.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="bg-dark">
  
    <section class="vh-100 bg-dark">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                               
                                <img src="~/Public/img/authImg/login.jpg"
                                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height:720px;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                                {
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form>
                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <img src="~/Public/img/logo.png" style="width:180px; height:120px;" />
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập vào hệ thống</h5>

                                            @Html.AntiForgeryToken()
                                            <div class="form-outline mb-4">
                                                @Html.LabelFor(m => m.Email)


                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg shadow-none" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                            </div>

                                            <div class="form-outline mb-3">

                                                @Html.LabelFor(m => m.Password,"Mật khẩu")

                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg s shadow-none" })
                                                @Html.ValidationMessageFor(m => m.Password,"", new { @class = "text-danger fw-bold" })
                                            </div>
                                            <div class="text-danger fw-bold">
                                                @if (ViewBag.error != null)
                                                {
                                                    @ViewBag.error
                                                }
                                            </div>
                                          
                                            <div class="pt-1 mb-4 mt-3">
                                                <input class="btn btn-dark btn-lg btn-block shadow-none" type="submit" value="Đăng nhập" />
                                            </div>

                                            <a class="small text-muted" href="#!">Quên mật khẩu?</a>
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                                Khách hàng mới ?  <a href="/Home/SignUp" style="color: #393f81;">Đăng kí ngay </a>
                                            </p>


                                        </form>
                                        
                                    </div>
                                }
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

