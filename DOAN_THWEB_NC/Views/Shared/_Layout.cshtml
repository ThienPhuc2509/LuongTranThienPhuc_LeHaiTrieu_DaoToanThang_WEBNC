</head>
<body style="background-color:#F3F3F3">
    @* Header *@
    <section class="header bg-dark">

        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div class="logo_header">
                        <img src="~/Public/img/logo.png" style="width:250px; height:150px;" />

                    </div>

                </div>
                <div class="col-6">
                    <div class="search py-5">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group form-inlinen d-flex ">
                                @Html.TextBox("SearchString", "", new { @class = "form-control shadow-none" })
                                <input type="submit" class="btn btn-warning shadow-none" value="Search" />
                            </div>

                        }
                    </div>
                </div>
                <div class="col-3">
                    <div class="search py-5 d-flex justify-content-center">
                        <div class="cart">
                            <a href="@Url.Action("ShowCart","ShoppingCart")" class="text-decoration-none">
                                <i class="fa-solid fa-basket-shopping" style="color:white; width:30px; height:30px;"></i>
                                @Html.Action("BagCart", "ShoppingCart")
                                <p class="m-0 text-white">Giỏ hàng</p>
                            </a>

                        </div>


                    </div>

                </div>

            </div>
        </div>

    </section>

    <section class="main_menu">
        <nav class="navbar navbar-expand-lg navbar-light text-white " style="background-color: #C89063 ">
            <div class="container-fluid">

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-5 me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white active" aria-current="page" href="/Home/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index","AllProduct")">Sản phẩm</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Loại sản phẩm
                            </a>
                            <ul class="dropdown-menu">
                                @{Html.RenderAction("Index", "Menu");}
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-5 mb-2 mb-lg-0 d-flex">


                        @if (Session["IDUser"] == null)
                        {
                            <li class="nav-item me-4 "><a class="nav-link text-white" href="/Home/SignUp"> Đăng kí</a></li>
                            <li class="nav-item "><a class="nav-link text-white" href="/Home/Login"> Đăng nhập</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="#">@Session["Email"].ToString()</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout","Home")">Đăng xuất</a></li>
                        }

                    </ul>

                </div>
            </div>
        </nav>
    </section>

    <section class="main_container">

        @RenderBody()

    </section>

