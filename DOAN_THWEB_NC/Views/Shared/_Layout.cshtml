
<!DOCTYPE html>
<html>
<head>
    <link href="~/Contents/style.css" rel="stylesheet" />
    <link href="~/Contents/global.css" rel="stylesheet" />
    <link href="~/Contents/easy-responsive-tabs.css" rel="stylesheet" />
    <link href="~/Contents/slider.css" rel="stylesheet" />
    <script src="~/js/easing.js"></script>
    <script src="~/js/easyResponsiveTabs.js"></script>
    <script src="~/js/jquery-1.7.2.min.js"></script>
    <script src="~/js/jquery.accordion.js"></script>
    <script src="~/js/jquery.easing.js"></script>
    <script src="~/js/move-top.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/slides.min.jquery.js"></script>
    <script src="~/js/startstop-slider.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
 
    <link rel="stylesheet" href="~/Contents/Style.css">
    <link href="~/Contents/all.min.css" rel="stylesheet" />
    <script src="~/js/all.min.js"></script>
</head>
<body>
    @* Header *@
    <section class="header">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/Home/Index">Trang Chủ</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Sản Phẩm</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Loại sản phẩm <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @{Html.RenderAction("Index", "Menu");}
                        </ul>

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li style="margin-right:20px;margin-top:10px">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group form-inline">
                                @Html.TextBox("SearchString", "", new { @class = "form-control" })
                                <input type="submit" class="btn btn-default" value="Search" />
                            </div>

                        }
                    </li>
                    <li>
                        <i class="fa-solid fa-cart-shopping" style="color: white; width: 30px; height: 30px;padding-top:10px"></i>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                    @if (Session["IDUser"] == null)
                    {
                        <li><a href="/Home/Sginup"><span class="glyphicon glyphicon-user"></span> Đăng nhập</a></li>
                        <li><a href="/Home/Login"><span class="glyphicon glyphicon-log-in"></span> Đăng kí</a></li>
                    }
                    else
                    {
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span>@Session["Email"].ToString()</a></li>
                        <li><a href="@Url.Action("Logout","Home")"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                    }

                </ul>
            </div>
        </nav>
    </section>
    

    <section class="main_container">
        @RenderBody()
    </section>

    <section class="footer">
        <footer class="bg-dark text-center text-lg-start text-white">
            <!-- Grid container -->
            <div class="container p-4">
                <!--Grid row-->
                <div class="row mt-4">
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
