@model IEnumerable<DOAN_THWEB_NC.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách người dùng</h2>


<table class="table">
    <tr>
        <th>
           Họ người dùng
        </th>
        <th>
            Tên người dùng
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            <ul class="list-inline m-0">
                <li class="list-inline-item">
                <a href="@Url.Action("Edit", new {  id=item.IDUser })">
                    <button class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa"><i class="fa fa-edit"></i></button>

                </a>

                </li>
                <li class="list-inline-item">
                    <a href="@Url.Action("Details", new {  id=item.IDUser })">
                    <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Chi tiết"><i class="fa fa-table"></i></button>
                </a>
                </li>
                <li class="list-inline-item">
                    <a href="@Url.Action("Delete", new {  id=item.IDUser })">
                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Xóa"><i class="fa fa-trash"></i></button>
                </li>
            </ul>
        </td>
    </tr>
}

</table>
