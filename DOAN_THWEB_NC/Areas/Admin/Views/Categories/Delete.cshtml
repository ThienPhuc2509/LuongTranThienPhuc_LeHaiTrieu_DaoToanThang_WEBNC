@model DOAN_THWEB_NC.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-danger">Xóa hãng điện thoại</h2>

<h3 class="text-danger">Bạn có chắc chắn không?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên hãng điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCategory)
        </dd>

        <dt>
           Logo
        </dt>

        <dd>
          <img src="@Url.Content(Model.ImagesCategory)"  />

        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
